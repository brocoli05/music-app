@model MusicApp.Models.InvoiceWithDetailViewModel

@{
    string title = $"Details for Invoice #{Model.InvoiceId}";

    ViewBag.Title = title;
}

<h2>@title</h2>
<div class="container my-5">
    <dl class="row">
        <dt class="col-sm-2">
            Customer Info
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>

        <dt class="col-sm-2"></dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerFirstName)
            @Html.DisplayFor(model => model.CustomerLastName)
        </dd>

        <dt class="col-sm-2"></dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerState),
            @Html.DisplayFor(model => model.CustomerCountry)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillingAddress)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillingAddress)
        </dd>

        <dt class="col-sm-2"></dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillingCity),
            @Html.DisplayFor(model => model.BillingState)
        </dd>

        <dt class="col-sm-2"></dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillingCountry),
            @Html.DisplayFor(model => model.BillingPostalCode)
        </dd>
    </dl>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Sales Rep
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmployeeFirstName)
            @Html.DisplayFor(model => model.CustomerEmployeeLastName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
<h3>Line Items</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th width="7%">@Html.DisplayNameFor(model => model.InvoiceLines.First().InvoiceLineId)</th>
            <th class="text-center" style="width: 60%;">Track</th>
            <th width="10%">@Html.DisplayNameFor(model => model.InvoiceLines.First().UnitPrice)</th>
            <th>@Html.DisplayNameFor(model => model.InvoiceLines.First().Quantity)</th>
            <th width="10%">@Html.DisplayNameFor(model => model.InvoiceLines.First().LinePrice)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.InvoiceLines)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => line.InvoiceLineId)</td>
                <td>
                    <dl class="row">
                        <dt class="col-sm-2 text-end">Name:</dt>

                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => line.TrackName)
                        </dd>

                        <dt class="col-sm-2 text-end">Album:</dt>

                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => line.AlbumTitle)
                        </dd>

                        <dt class="col-sm-2 text-end">Artist:</dt>

                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => line.ArtistName)
                        </dd>

                        <dt class="col-sm-2 text-end">Composer(s):</dt>

                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => line.TrackComposer)
                        </dd>

                        <dt class="col-sm-2 text-end">Genre:</dt>

                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => line.GenreName)
                        </dd>

                        <dt class="col-sm-2 text-end">Media Type:</dt>

                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => line.TrackName)
                        </dd>

                        <dt class="col-sm-2 text-end">Media Type</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => line.MediaTypeName)
                        </dd>
                    </dl>
                </td>
                <td>@Html.DisplayFor(modelItem => line.UnitPrice)</td>
                <td>@Html.DisplayFor(modelItem => line.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => line.LinePrice)</td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Back to List", "Index", null, new { style = "text-decoration:none" })
</p>

