@model IEnumerable<MusicApp.Models.PlaylistBaseViewModel>

@{
    string actionName = ViewContext.RouteData.GetRequiredString("action");
    string title = "Playlists";

    ViewBag.Title = title;
}

<h2>@title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TracksCount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.TracksCount)</span>
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPlaylist", new { id = item.PlaylistId }, new { style = "text-decoration:none" }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlaylistId }, new { style = "text-decoration:none" })
            </td>
        </tr>
    }

</table>
